{
    //"editor.defaultFormatter": "SoftwareApe.crustless",
    //"editor.defaultFormatter": "clang-format",
    "crustless.uncrustify": "/se/r3dm/sw/rocky-9-x86_64/inst/uncrustify/0.72.0/bin/uncrustify",
    "crustless.config": "uncrustify.cfg",
    "C_Cpp.intelliSenseEngine": "Disabled",
    "C_Cpp.autocomplete": "Disabled", // So you don't get autocomplete from both extensions.
    "C_Cpp.errorSquiggles": "Disabled", // So you don't get error squiggles from both extensions (clangd's seem to be more reliable anyway).
    "cmake.configureOnOpen": false,
    "cmake.showOptionsMovedNotification": false,
    "clangd.arguments": [
        "-log=info",
        "-pretty",
        "--background-index",
        "--pch-storage=memory",
        "--header-insertion=never",
        "--clang-tidy",
        "--compile-commands-dir=build/linux64"
    ],
    "gitblame.inlineMessageEnabled": true,
    "editor.renderWhitespace": "boundary",
    "editor.inlayHints.enabled": "off",
    "vim.useCtrlKeys": false,
    "vim.useSystemClipboard": true,
    "vim.easymotion": true,
    "editor.minimap.enabled": false,
    "vim.leader": "<space>",
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "g",
                "h"
            ],
            "commands": [
                {
                    "command": "ccls.callHierarchy",
                    "args": {
                        "levels": 10,
                        "callee": true
                    }
                },
            ]
        },
        {
            "before": [
                "g",
                "r"
            ],
            "commands": [
                {
                    "command": "editor.action.goToReferences"
                }
            ]
        },
        { // EasyMotion
            "before": [
                ","
            ],
            "after": [
                "leader",
                "leader",
                "leader",
                "b",
                "d",
                "w"
            ]
        },
        {
            "before": [
                "S-k"
            ],
            "commands": [
                {
                    "command": "editor.debug.action.showDebugHover",
                    "when": "inDebugMode"
                },
                {
                    "command": "editor.action.showHover",
                    "when": "!inDebugMode"
                }
            ]
        },
        {
            "before": [
                "S-l"
            ],
            "commands": [
                {
                    "command": "editor.action.goToTypeDefinition"
                }
            ]
        }
    ],
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "cmake.options.statusBarVisibility": "visible",
    "workbench.editor.enablePreview": false,
    "window.openFoldersInNewWindow": "on",
    "[cpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    //"workbench.activityBar.location": "hidden"
    "workbench.list.smoothScrolling": false,
    "editor.smoothScrolling": false,
    "editor.fontSize": 13,
    "editor.formatOnSave": false,
}